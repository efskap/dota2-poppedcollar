<Window x:Class="InvokerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PoppedCollar" Height="224" Width="206" ResizeMode="CanMinimize" KeyDown="Window_KeyDown">
    <Window.Background>
        <ImageBrush ImageSource="Images/gray_jean.png"/>
    </Window.Background>

    <Grid>

        <Label Content="PoppedCollar" HorizontalAlignment="Center" FontSize="24"  />
        <Button x:Name="button" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Width="74"  FontSize="24" Click="Button_Click" IsTabStop="False" Focusable="False" />
        <Button x:Name="hotkeybutton" Content="Hotkey" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="16"  IsTabStop="False" Click="hotkey_Click" Focusable="False" Margin="0,120,0,0"  />

    </Grid>
</Window>
